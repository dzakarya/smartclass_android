<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".temp_control_page">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/el1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Temp Control Page"
        android:layout_below="@+id/el1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/primaryTextColor"
        android:textSize="30sp"
        android:id="@+id/txt1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Status:"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/primaryTextColor"
        android:id="@+id/txt2"
        />

    <com.google.android.material.slider.Slider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:trackColor="@color/primaryColor"
        android:layout_below="@+id/txt2"
        android:valueFrom="16"
        android:valueTo="30"
        android:id="@+id/temp_slider"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:layout_below="@+id/temp_slider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Set"
        android:textColor="@color/primaryTextColor"
        android:id="@+id/btn_set_temp"
        />
</RelativeLayout>